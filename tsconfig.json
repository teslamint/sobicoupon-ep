{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": true,
    "declaration": false,
    "outDir": "./dist",
    "rootDir": "./public",
    "strict": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "lib": ["DOM", "DOM.Iterable", "ES2020"]
  },
  "include": [
    "public/**/*",
    "types/**/*",
    "types.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.js"
  ]
}